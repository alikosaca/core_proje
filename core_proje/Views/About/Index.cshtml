@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="card-header border-0">
    <h3 class="mb-0">Hakkımda Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    @Html.HiddenFor(x => x.AboutID)
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Yaş</label>
    @Html.TextAreaFor(x => x.Age, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextAreaFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextAreaFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
    <br />
    <label>Görsel Yolu</label>
    @Html.TextAreaFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Açıklma</label>
    @Html.TextAreaFor(x => x.Description, 10, 2, new { @class = "form-control" })

    <button class="btn btn-success">Güncelle</button>
}
